<script type= "text/javascript">
  $(document).ready(function(){
   $("#new_plan").validate();
   });	
     
function validate_type()
{
file_name = document.getElementById('plan_file').value;
var ext = file_name.substring(file_name.lastIndexOf('.') + 1);
if(ext == "pdf" || ext == "doc" || ext == "docx" || ext == "ppt" || ext == "pptx" || ext == "txt" || ext == "rtf")
{
return true;
} 
else
{
alert("Invalid file.\nPlease select a Word or Powerpoint or PDF documents only.");
$('#plan_file').val(''); 
$("#plan_file").focus();
return false;
}
}
</script>
<div id="form">
 <div id="top-bg"></div>
  <div id="bottom-bg">
<%= form_for(@plan, :html => { :multipart => true }) do |f| %>
<div>
	<table>
	 <tbody>	
		<tr>
			<td style=height:40;>
        <%= name_text_field f %>
    </td>
			<td rowspan="3" class="vbdr" style=width:3%;></td>
			<td>Brief Description of Idea:<br /><b>(less than 250 words)</b></td>
            <td rowspan="3" class="vbdr" style=width:3%;>&nbsp;</td>
            <td><%= f.label :file, "Attach file" %></td>
