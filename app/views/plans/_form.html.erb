			<td style=height:40;><%= f.label :email %>
			<%= f.text_field :email, :class => "text-area required email", :title => "Please enter email", :tabindex => 2 %></td>
			<td rowspan="2"><%= f.text_area :description, :size => '45x5', :class => "text-field required", :title => "Please enter description", :tabindex => 4 %></td>
			<td><%= f.file_field :file, :title => "Please attach file", :onchange => "validate_type()", :tabindex => 5 %></td>
		</tr>
		<tr>
			<td style=height:40;><%= f.label :phone %>
			<%= f.text_field :phone, :class => "text-area required", :title => "Please enter phone number", :tabindex => 3 %></td>
			<td><%= image_submit_tag("submit.jpg", :alt => "Submit") %></td>
		</tr>
	 </tbody>	
	</table>
</div>	
<% end %>
</div>
