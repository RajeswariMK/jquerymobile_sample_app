<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => '50x20' %>
  </div>
  <div class="field">
    <%= f.label :published_on %><br />
    <%= f.datetime_select :published_on %>
  </div><br />
  <div class="field">
    <%= f.check_box :show %><%= f.label :show, "Show on front page"%><br />
    
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
